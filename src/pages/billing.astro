---
import Layout from '../layouts/Layout-Checkout.astro';
import PaymentInfo from '../components/shared/PaymentInfo.astro';
---

<Layout title="Billing - Your Store">
  <div class="billing-page">
    <h1>Shipping address</h1>
    <form>
      <input type="email" placeholder="Email address" required />
      <div class="name-fields">
        <input type="text" placeholder="First name" required />
        <input type="text" placeholder="Last name" required />
      </div>
      <input type="text" placeholder="Country/Region" required />
      <input type="text" placeholder="Enter your address here" required />
      
      <h2>Payment</h2>
      <div class="payment-method">
        <label>
          <input type="radio" name="payment" checked />
          Credit Card
        </label>
          <img src="https://offer.groundedfootwear.co/freedom/en/us/v1/img/cards.png" alt="Visa" />
      </div>
      <input type="text" placeholder="Card number" required />
      <div class="expiry-security">
        <input type="text" placeholder="Month" required />
        <input type="text" placeholder="Year" required />
        <input type="text" placeholder="Security code" required />
      </div>
      <label>
        <input type="checkbox" checked />
        Use shipping address as billing address
      </label>
      <button type="submit">Complete Your Secure Purchase</button>
    </form>
    <PaymentInfo />
  </div>
</Layout>

<style>
  .billing-page {
    max-width: 600px;
    margin: 0 auto;
    padding: 1rem;
    background-color: #fff;
    color: #000;
  }
  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  input[type="text"],
  input[type="email"] {
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    background: #fff;
    color: #000;
    width: 100%;
    box-sizing: border-box;
  }
  button {
    background: #000;
    color: #fff;
    padding: 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
  }
  h1, h2, p {
    color: #000;
    font-size: 1.125rem;
    font-weight: 600;
    font-family: "Poppins", sans-serif;
  }
  .name-fields {
    display: flex;
    gap: 1rem;
    width: 100%;
  }
  .name-fields input {
    flex: 1;
  }
  .payment-method {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .expiry-security {
    display: flex;
    gap: 0.5rem;
    width: 100%;
  }
  .expiry-security input {
    width: 33.33%;
    min-width: 0;
  }
  label {
    color: #000;
  }
  @media (max-width: 600px) {
    .billing-page {
      padding: 0.5rem;
    }
    .name-fields {
      flex-direction: column;
      gap: 0.5rem;
    }
    .expiry-security {
      flex-wrap: wrap;
    }
    .expiry-security input {
      width: calc(33.33% - 0.35rem);
    }
  }
</style>
