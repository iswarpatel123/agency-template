---
import Layout from '../layouts/Layout-Checkout.astro';
import QuantitySelector from '../components/sections/quantity/QuantitySelector.astro';
import ColorSizeSelector from '../components/sections/colorsize/ColorSizeSelector.tsx';
import PaymentInfo from '../components/shared/PaymentInfo.astro';
import Countdown from '../components/shared/Countdown.astro';
---

<Layout title="Checkout">
  <main class="checkout-page">
    <div class="max-w-[600px] mx-auto w-full px-4">
      <Countdown coupon="HOLIDAY24" initialMinutes={10} />
      <div class="mt-4">
        <QuantitySelector />
      </div>
      <div class="mt-4">
        <ColorSizeSelector client:visible />
      </div>
      <div class="mt-4">
        <PaymentInfo />
      </div>
    </div>
  </main>
</Layout>

<style>
  .checkout-page {
    background: #f8fafc;
    min-height: 100vh;
    padding: 2rem 0;
  }
</style>