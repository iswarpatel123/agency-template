---
import CtaButton from "./CtaButton.astro";
import { hero } from "../../utils/data/hero";

const shipDate = new Date();
shipDate.setDate(shipDate.getDate() + hero.shipping.days);
const shipDateStr = shipDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric' });
---

<div class="fixed bottom-0 left-0 right-0 bg-white p-4 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1),_0_-2px_4px_-1px_rgba(0,0,0,0.06)] dark:shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.2),_0_-2px_4px_-1px_rgba(0,0,0,0.12)] flex flex-col items-center justify-center sm:hidden" style="z-index: 1000;">
  <CtaButton>Get Your Shoes Now</CtaButton>
  <p class="text-sm flex items-center gap-1 justify-center text-gray-600 mt-2">
    <span class="inline-block w-2 h-2 bg-green-500 rounded-full"></span>
    Ship by {shipDateStr} | Stock Levels 
    <span class="text-red-500 font-semibold ml-1">{hero.shipping.stockLevel}</span>
  </p>
</div>
