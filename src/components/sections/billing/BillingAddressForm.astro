<div class="billing-container">
  <div class="title-bar">
    <h2>Billing Address</h2>
  </div>
  
  <form class="billing-address-form" data-form-type="billing">
    <div class="name-fields">
      <div class="input-group">
        <input
          type="text"
          id="firstName-billing"
          name="firstName"
          placeholder="First Name"
          class="address-input"
        />
      </div>
      <div class="input-group">
        <input
          type="text"
          id="lastName-billing"
          name="lastName"
          placeholder="Last Name"
          class="address-input"
        />
      </div>
    </div>

    <div class="form-field">
      <label for="billing-country">Country/Region</label>
      <select id="billing-country" name="country">
        <option value="US" selected>United States</option>
      </select>
    </div>

    <div class="input-group">
      <input
        type="text"
        id="address1-billing"
        name="address1"
        placeholder="Address Line 1"
        class="address-input"
      />
    </div>

    <div class="input-group">
      <input
        type="text"
        id="address2-billing"
        name="address2"
        placeholder="Address Line 2 (Optional)"
        class="address-input"
      />
    </div>

    <div class="city-state-zip">
      <div class="input-group">
        <input
          type="text"
          id="city-billing"
          name="city"
          placeholder="City"
          class="address-input"
        />
      </div>

      <select id="state-billing" name="state">
        <option value="" disabled selected>State</option>
        <option value="AL">Alabama</option>
        <option value="AK">Alaska</option>
        <option value="AZ">Arizona</option>
        <option value="AR">Arkansas</option>
        <option value="CA">California</option>
        <option value="CO">Colorado</option>
        <option value="CT">Connecticut</option>
        <option value="DE">Delaware</option>
        <option value="FL">Florida</option>
        <option value="GA">Georgia</option>
        <option value="HI">Hawaii</option>
        <option value="ID">Idaho</option>
        <option value="IL">Illinois</option>
        <option value="IN">Indiana</option>
        <option value="IA">Iowa</option>
        <option value="KS">Kansas</option>
        <option value="KY">Kentucky</option>
        <option value="LA">Louisiana</option>
        <option value="ME">Maine</option>
        <option value="MD">Maryland</option>
        <option value="MA">Massachusetts</option>
        <option value="MI">Michigan</option>
        <option value="MN">Minnesota</option>
        <option value="MS">Mississippi</option>
        <option value="MO">Missouri</option>
        <option value="MT">Montana</option>
        <option value="NE">Nebraska</option>
        <option value="NV">Nevada</option>
        <option value="NH">New Hampshire</option>
        <option value="NJ">New Jersey</option>
        <option value="NM">New Mexico</option>
        <option value="NY">New York</option>
        <option value="NC">North Carolina</option>
        <option value="ND">North Dakota</option>
        <option value="OH">Ohio</option>
        <option value="OK">Oklahoma</option>
        <option value="OR">Oregon</option>
        <option value="PA">Pennsylvania</option>
        <option value="RI">Rhode Island</option>
        <option value="SC">South Carolina</option>
        <option value="SD">South Dakota</option>
        <option value="TN">Tennessee</option>
        <option value="TX">Texas</option>
        <option value="UT">Utah</option>
        <option value="VT">Vermont</option>
        <option value="VA">Virginia</option>
        <option value="WA">Washington</option>
        <option value="WV">West Virginia</option>
        <option value="WI">Wisconsin</option>
        <option value="WY">Wyoming</option>
      </select>

      <div class="input-group">
        <input
          type="text"
          id="zip-billing"
          name="zipCode"
          placeholder="Zip Code"
          class="address-input"
          maxlength="10"
        />
      </div>
    </div>

    <div class="input-group">
      <input
        type="tel"
        id="phone-billing"
        name="phone"
        placeholder="Phone Number (Optional)"
        class="address-input"
      />
    </div>
  </form>
</div>

<style>
  .billing-container {
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    background: white;
    overflow: hidden;
  }

  .title-bar {
    background: #004236;
    color: white;
    padding: 1rem 1.5rem;
  }

  .title-bar h2 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .billing-address-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    width: 100%;
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .city-state-zip {
    display: flex;
    gap: 0.5rem;
  }

  .city-state-zip input,
  .city-state-zip select {
    width: 100%;
  }

  .name-fields {
    display: flex;
    gap: 1rem;
  }

  input,
  select {
    padding: 0.75rem;
    border: 1px solid #333;
    border-radius: 4px;
    background: #f9f9f9;
    color: #000;
    font-weight: 600;
    width: 100%;
    font-size: 16px;
    box-sizing: border-box;
  }

  .address-input::placeholder {
    color: #777;
    font-weight: 600;
  }

  input:focus,
  select:focus {
    outline: 2px solid #1976D2;
    outline-offset: 2px;
  }

  label {
    color: #000;
    font-weight: 600;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .title-bar {
      padding: 1rem;
    }

    .billing-address-form {
      padding: 1rem;
    }
  }

  @media (max-width: 600px) {
    .name-fields {
      flex-direction: column;
      gap: 0.5rem;
    }

    .city-state-zip {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>