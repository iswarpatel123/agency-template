---
import MoneyBack from '../../shared/MoneyBack.astro';

const rating = {
  stars: 5,
  count: "254,100+",
  text: "Happy Customers"
};
---

<div class="product-info hidden lg:block">
  <div class="rating-section mb-6">
    <div class="flex items-center gap-2">
      <img src="https://offer.groundedfootwear.co/freedom/en/us/img/stars-5.svg" alt="5 stars" class="h-5" />
      <span class="text-sm font-medium">{rating.count} {rating.text}</span><span class="text-sm font-medium text-red-600 ml-4">New 2024 Release</span>
    </div>
    <div class="mt-4 flex items-center gap-4">
      <div>
        <h2 class="text-xl font-bold mb-2">
          <div>Grounded</div>
          <div>Footwear</div>
        </h2>
        <p class="text-gray-600">Barefoot Shoes</p>
      </div>
      <div class="flex gap-2 mt-2">
        <img src="https://ae-pic-a1.aliexpress-media.com/kf/Sa97cb0ece6b94cbb8f31155e98fc1c03V.jpg_640x640.jpg_.webp" alt="Shoes" class="w-32 h-32 object-cover rounded-lg" />
      </div>
    </div>
  </div>
  <hr class="my-6 border-gray-300">

  <div class="guarantee-section mb-6">
    <MoneyBack/>
  </div>

  <hr class="my-6 border-gray-300">

  <div class="reviews-section">
    <div class="review mb-4">
      <img src="https://offer.groundedfootwear.co/freedom/en/us/img/stars-5.svg" alt="5 stars" class="h-4 mb-2" />
      <h3 class="font-bold mb-1">Perfect Sneaker Replacement!</h3>
      <p class="text-sm text-gray-600 mb-2">Love these shoes! Lightweight and flexible, they replaced my sneakers. 5 stars!</p>
      <div class="flex items-center gap-2">
        <span class="text-sm font-medium">- Emily W.</span>
        <span class="text-xs text-green-500"><img src="https://offer.groundedfootwear.co/freedom/en/us/img/shield-checkmark.svg" alt="Verified Purchaser" class="h-4 inline-block"> Verified Purchaser</span>
      </div>
    </div>

    <hr class="my-6 border-gray-300">

    <div class="review mb-4">
      <img src="https://offer.groundedfootwear.co/freedom/en/us/img/stars-5.svg" alt="5 stars" class="h-4 mb-2" />
      <h3 class="font-bold mb-1">Unbeatable Comfort and Value!</h3>
      <p class="text-sm text-gray-600 mb-2">Most comfortable shoes I've ever bought. Great price too! Might get another pair!</p>
      <div class="flex items-center gap-2">
        <span class="text-sm font-medium">- Michael R.</span>
        <span class="text-xs text-green-500"><img src="https://offer.groundedfootwear.co/freedom/en/us/img/shield-checkmark.svg" alt="Verified Purchaser" class="h-4 inline-block"> Verified Purchaser</span>
      </div>
    </div>
  </div>
</div>

<style>
  .product-info {
    width: 400px;
    flex-shrink: 0;
    padding: 1.5rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
  }

  @media (max-width: 1024px) {
    .product-info {
      display: none;
    }
  }
</style>