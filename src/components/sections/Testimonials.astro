---
import { testimonials } from "../../utils/data/testimonials";
import GradiantText from "../shared/GradiantText.astro";

interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section id="reviews" class:list={["max-w-7xl mx-auto px-8 py-4 sm:py-6", className]}>
  <h2 class="text-4xl/tight sm:text-5xl/tight font-bold text-heading-1 text-center mb-4 sm:mb-6">
    What <GradiantText>Owners</GradiantText> Are Saying
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      testimonials.map((testimonial) => (
        <div class="flex flex-col">
          <div class="mb-4">
            <img
              src={testimonial.image}
              alt={`${testimonial.name}'s testimonial`}
              class="w-full h-auto object-cover rounded-lg"
            />
          </div>
          <div class="mb-4">
            <img
              src={testimonial.ratingImg}
              alt="5 star rating"
              class="h-6"
            />
          </div>
          <h3 class="text-xl font-bold text-heading-1 mb-2">{testimonial.title}</h3>
          <p class="text-heading-2 mb-4">{testimonial.text}</p>
          <div class="flex items-center mt-auto">
            <span class="text-heading-1">{testimonial.name}</span>
            <img 
              src="https://offer.groundedfootwear.co/freedom/en/us/img/shield-checkmark.svg"
              alt="Verified"
              class="h-5 w-5 ml-2"
            />
            <span class="text-sm text-[#00B67A] ml-2">{testimonial.designation}</span>
          </div>
        </div>
      ))
    }
  </div>
</section>
