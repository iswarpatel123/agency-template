---
import { features } from "../../utils/data";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class={`relative px-6 ${className}`}>
  <div class="mx-auto max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl/tight sm:text-5xl/tight font-bold text-heading-1 mb-6">
        {features.title}
      </h2>
    </div>

    <div class="relative">
      <!-- Features grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center">
        <!-- Left features -->
        <div class="space-y-12">
          {features.features.slice(0, 2).map((feature) => (
            <div class="flex flex-col text-left">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-12 h-12 flex items-center justify-center">
                  <img
                    src={feature.icon}
                    alt={feature.title}
                    class="w-8 h-8"
                    width="32"
                    height="32"
                  />
                </div>
                <h3 class="text-2xl font-semibold text-heading-2">{feature.title}</h3>
              </div>
              <p class="text-lg text-gray-600 dark:text-gray-300">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Center image -->
        <div class="relative mx-auto">
          <img
            src={features.image}
            alt="Shoe features showcase"
            class="w-full h-auto object-contain"
          />
        </div>

        <!-- Right features -->
        <div class="space-y-12">
          {features.features.slice(2).map((feature) => (
            <div class="flex flex-col text-left">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-12 h-12 flex items-center justify-center">
                  <img
                    src={feature.icon}
                    alt={feature.title}
                    class="w-8 h-8"
                    width="32"
                    height="32"
                  />
                </div>
                <h3 class="text-2xl font-semibold text-heading-2">{feature.title}</h3>
              </div>
              <p class="text-lg text-gray-600 dark:text-gray-300">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
